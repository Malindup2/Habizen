<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glass background with subtle gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFF8F8F8"
                android:startColor="#FFFFFFFF"
                android:type="linear" />
            <corners android:radius="12dp" />
            <stroke
                android:width="3dp"
                android:color="@color/primary" />
        </shape>
    </item>

    <!-- Water mark lines for empty glass -->
    <item android:top="20dp" android:bottom="140dp" android:left="15dp" android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0F2FE" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:top="60dp" android:bottom="100dp" android:left="15dp" android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0F2FE" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:top="100dp" android:bottom="60dp" android:left="15dp" android:right="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0F2FE" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>