<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.MoodFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Mood Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Mood Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_background"
                        android:padding="20dp">

                        <TextView
                            style="@style/SubheadlineStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="How are you feeling today?"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="Select your current mood"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Mood Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvMoodVerySad"
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="1"
                                android:background="@drawable/mood_button_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="😢"
                                android:textSize="36sp" />

                            <TextView
                                android:id="@+id/tvMoodSad"
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="1"
                                android:background="@drawable/mood_button_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="😟"
                                android:textSize="36sp" />

                            <TextView
                                android:id="@+id/tvMoodNeutral"
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="1"
                                android:background="@drawable/mood_button_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="😐"
                                android:textSize="36sp" />

                            <TextView
                                android:id="@+id/tvMoodHappy"
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="1"
                                android:background="@drawable/mood_button_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="🙂"
                                android:textSize="36sp" />

                            <TextView
                                android:id="@+id/tvMoodVeryHappy"
                                android:layout_width="0dp"
                                android:layout_height="72dp"
                                android:layout_weight="1"
                                android:background="@drawable/mood_button_background"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:text="😊"
                                android:textSize="36sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvSelectedMood"
                            style="@style/BodyStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="Select your mood"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMoodNote"
                            style="@style/CustomMoodTextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Add a note (optional)"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMoodNote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:lines="3"
                                android:maxLines="5"
                                android:textColor="@color/text_primary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btnSaveMood"
                            style="@style/PrimaryButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save Mood"
                            app:icon="@drawable/ic_check" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- History Section Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- History Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/gradient_background"
                        android:padding="20dp">

                        <TextView
                            style="@style/SubheadlineStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Mood History"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <!-- Toggle between list and calendar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="end">

                        <Button
                            android:id="@+id/btnToggleView"
                            style="@style/SecondaryButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calendar View" />

                    </LinearLayout>

                    <!-- Calendar (hidden by default) -->
                    <com.applandeo.materialcalendarview.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- History Content -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvMoodEntries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginBottom="16dp"
                            android:minHeight="120dp"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_mood_entry" />

                        <!-- Empty State -->
                        <LinearLayout
                            android:id="@+id/llEmptyState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="😊"
                                android:textSize="64sp" />

                            <TextView
                                style="@style/SubheadlineStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="No Mood Entries Yet"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/BodyStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="Start tracking your daily mood\nto see patterns and insights!"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>