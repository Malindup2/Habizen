<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hydration Tracker"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSettings"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_settings"
                app:iconTint="@color/primary" />

        </LinearLayout>

        <!-- Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Water Visual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Water drop icons that fill based on progress -->
                    <ImageView
                        android:id="@+id/drop1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water_drop_outline" />

                    <ImageView
                        android:id="@+id/drop2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water_drop_outline" />

                    <ImageView
                        android:id="@+id/drop3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water_drop_outline" />

                    <ImageView
                        android:id="@+id/drop4"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water_drop_outline" />

                    <ImageView
                        android:id="@+id/drop5"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="4dp"
                        android:alpha="0.6"
                        android:src="@drawable/ic_water_drop_outline" />

                </LinearLayout>

                <!-- Progress text -->
                <TextView
                    android:id="@+id/tvCurrentIntake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0ml"
                    android:textColor="@color/primary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDailyGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Goal: 2000ml"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- Progress bar -->
                <ProgressBar
                    android:id="@+id/progressHydration"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginBottom="8dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_background" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="0% â€¢ 2350ml left"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Add Buttons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Quick Add"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add250ml"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="250ml"
                android:textColor="@color/primary"
                android:backgroundTint="@color/white"
                android:strokeColor="@color/primary"
                app:icon="@drawable/ic_water_drop"
                app:iconTint="@color/primary" />

            <Button
                android:id="@+id/add500ml"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="500ml"
                android:textColor="@color/primary"
                android:backgroundTint="@color/white"
                android:strokeColor="@color/primary"
                app:icon="@drawable/ic_water_glass"
                app:iconTint="@color/primary" />

            <Button
                android:id="@+id/add750ml"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="750ml"
                android:textColor="@color/primary"
                android:backgroundTint="@color/white"
                android:strokeColor="@color/primary"
                app:icon="@drawable/ic_water_bottle"
                app:iconTint="@color/primary" />

        </LinearLayout>

        <!-- Custom Amount -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:hint="Custom amount (ml)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCustomAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnAddCustom"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_add" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Entries Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Recent Entries"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Recent Entries Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/llEmptyHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_water_glass"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No entries yet"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Your hydration history will appear here"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHydrationHistory"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:nestedScrollingEnabled="false" />

        </FrameLayout>

    </LinearLayout>

</ScrollView>