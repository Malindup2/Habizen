<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Habizen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.Habizen" parent="Base.Theme.Habizen" />
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Habizen.Splash" parent="Theme.Habizen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/blue_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="PrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SecondaryButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DangerButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Text Styles -->
    <style name="HeadlineStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SubheadlineStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CaptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Custom Dialog Styles -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="CustomFilledButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Custom Mood Input Styles -->
    <style name="CustomMoodTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- Custom Delete Dialog Style -->
    <style name="CustomDeleteDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDeleteDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDeleteDialogNegativeButton</item>
    </style>

    <style name="CustomDeleteDialogPositiveButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomDeleteDialogNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Custom Hydration Settings Dialog Style -->
    <style name="CustomHydrationSettingsDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomHydrationDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomHydrationDialogNegativeButton</item>
    </style>

    <style name="CustomHydrationDialogPositiveButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomHydrationDialogNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>